<input name={{name}} type={{type}}
    {{#if className}}
        class={{className}}
    {{/if}}
    {{#if value}}
        value={{{add_quotes value}}}
    {{/if}}
    {{#if src}}
        src={{src}}
    {{/if}}
    {{#if placeholder}}
        placeholder={{placeholder}}
    {{/if}}
    {{#if autocomplete}}
        autocomplete={{autocomplete}}
    {{/if}}
/>
